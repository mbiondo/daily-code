---
import { ViewTransitions } from "astro:transitions"
import ThemeSwitch from "../components/ThemeSwitch.astro"

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Daily Code Challenge' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class='min-h-screen bg-base-200'>
		<div class='container mx-auto px-4'>
			<header class='navbar bg-base-100 shadow-lg rounded-box mt-4'>
				<div class='flex-1'>
					<a href='/' class='btn btn-ghost text-xl'>Daily Code Challenge</a>
				</div>
				<div class='flex-none gap-2'>
					<slot name='language-selector' />
					<ThemeSwitch transition:persist />
				</div>
			</header>
			<main class='py-8'>
				<slot />
			</main>
		</div>
	</body>
</html>
